<?xml version="1.0"?>
<launch>

  <param name="use_sim_time" value="true"/>
  
  <node pkg="rosbag" type="play" name="rosbag_player" args="/otherssd/bag/armbag_2020-09-11-13-48-07_AUTO_SAMPLING.bag --start=120 --clock -r 1.0"/>

  <node pkg="rviz" type="rviz" name="$(anon rviz)" args="-d $(find depth_image_averaging)/rviz.rviz"/>

  <node name="depth_image_averaging" pkg="depth_image_averaging" type="depth_image_averaging_node" output="screen"> 
      <remap from="depth_in" to="/camera/aligned_depth_to_color/image_raw"/>
      <remap from="depth_out" to="/camera/aligned_depth_to_color/image_raw_avg"/>
  </node>

</launch>